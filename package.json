{
  "name": "ecommerce-shop-backend",
  "version": "1.0.0",
  "description": "A robust e-commerce backend service with user authentication, product management, shopping cart, order processing, payment integration (Zarinpal), SMS notifications (Melipayamak), and admin dashboard features",
  "private": true,
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --watch src --files --rs src/server.ts",
    "seed": "ts-node src/seed/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "build": "rimraf dist && tsc",
    "vercel-build": "npm run build",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "keywords": [
    "ecommerce",
    "shop",
    "backend",
    "node",
    "express",
    "typescript",
    "mongodb",
    "authentication",
    "payment",
    "sms",
    "zarinpal",
    "melipayamak",
    "cloudinary"
  ],
  "author": {
    "name": "amirhosein rabibeigi",
    "email": "amirrabi70@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.5.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "melipayamak": "^1.0.0",
    "mongoose": "^8.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.9",
    "pug": "^3.0.3",
    "sanitize-html": "^2.14.0",
    "sharp": "^0.33.5",
    "uuid": "^11.1.0",
    "validator": "^13.12.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zarinpal-node-sdk": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/html-to-text": "^9.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.8",
    "@types/pug": "^2.0.10",
    "@types/sanitize-html": "^2.13.0",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "eslint": "^9.21.0",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
